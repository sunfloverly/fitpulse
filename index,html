  <!-- SCRIPTS: Forms, Exit-Intent, Mobile Menu, Basic Analytics Hooks -->
  <script>
    // Replace contact form submissions with actual backend endpoints or Zapier/Integromat webhook URLs
    function handleFormSubmit(ev, successEl) {
      ev.preventDefault();
      const data = new FormData(ev.target);
      // TODO: send 'data' to your CRM / webhook
      console.log('Form submit (simulate):', Object.fromEntries(data.entries()));
      if(successEl) successEl.classList.remove('hidden');
      ev.target.reset();
    }

    document.getElementById('contactForm').addEventListener('submit', (e)=> handleFormSubmit(e, document.getElementById('contactSuccess')));
    document.getElementById('freeTrialForm').addEventListener('submit', (e)=> handleFormSubmit(e));
    document.getElementById('membershipForm').addEventListener('submit', (e)=> handleFormSubmit(e));
    document.getElementById('downloadForm').addEventListener('submit', (e)=> {
      e.preventDefault();
      // ideally push to email list then show download
      alert('Thanks! Check your email for the 7-day diet plan (this is a demo).');
      e.target.reset();
    });

    // Exit intent popup (desktop: mouseout toward top), show once per session
    let exitShown = sessionStorage.getItem('exitShown');
    function showExitPopup(){
      if(exitShown) return;
      document.getElementById('exitPopup').classList.remove('hidden');
      document.getElementById('exitPopup').style.display = 'flex';
      sessionStorage.setItem('exitShown', '1');
    }
    document.addEventListener('mouseout', function(e){
      if(e.clientY < 10) showExitPopup();
    });
    document.getElementById('exitClose').addEventListener('click', ()=> document.getElementById('exitPopup').classList.add('hidden'));
    document.getElementById('exitDownload').addEventListener('click', ()=> { window.location.href='/assets/7-day-diet-plan.pdf'; });

    // Mobile menu toggle
    const mobileBtn = document.getElementById('mobileMenuBtn');
    mobileBtn && mobileBtn.addEventListener('click', ()=>{
      // naive mobile nav (improve for production)
      alert('Open mobile menu (demo)');
    });

    // Set year in footer
    document.getElementById('year').innerText = new Date().getFullYear();

    // Basic analytics event hooks (replace with real analytics)
    function trackEvent(name, payload){ console.log('track', name, payload); }
  </script>

